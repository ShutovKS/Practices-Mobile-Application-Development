<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textViewBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тут появится название вашей любимой книги и любимая цитата из нее!"
            android:textSize="18sp"
            android:padding="16dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/buttonOpenInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/buttonOpenInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Открыть экран ввода данных"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBook" />

</androidx.constraintlayout.widget.ConstraintLayout>